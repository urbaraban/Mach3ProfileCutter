<Window x:Class="ProfileCutter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProfileCutter" xmlns:panels="clr-namespace:ProfileCutter.Panels"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="550">
    <Window.Resources>
        <panels:ManualPanel x:Key="ManualPage"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition/>
            <RowDefinition Height="130"/>
        </Grid.RowDefinitions>
        <Button Content="STOP"
                Grid.Row="0"
                Grid.RowSpan="1"/>
        <TabControl Margin="5"
                    Grid.RowSpan="1"
                    Grid.Row="1">
            <TabItem Header="Ручной">
                <panels:ManualPanel/>
            </TabItem>
            <TabItem Header="По программе">
                <panels:OnProgrammPanel/>
            </TabItem>
            <TabItem Header="Настройки">
                <panels:SettingPanel/>
            </TabItem>
        </TabControl>
        <panels:Mach3StatusControl Grid.Row="2"/>
    </Grid>
</Window>
